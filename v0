# shellcheck shell=sh disable=SC3043

xrc param/v0

zuz(){
    param:dsl <<A
subcommand:
    uz|decompress       "unzip"
    uzr                 "decompress then remove the original file"
    z|compress          "zip"
A
    param:run

    if [ -z "$PARAM_SUBCMD" ]; then
        zuz help
        return 0
    fi

    eval "zuz_$PARAM_SUBCMD" "$@"
}

# NOTICE: tar czf - "$@" | split -b "$size" -a 3 - "$target_file."
# NOTICE: In some environments, split doesnot have -d option. Thus we are using 7zip to compress

xrc log init zuz

zuz_run(){
    local IFS
    zuz_log info "Command to execute: $*"
    eval "$@"
}


# Reference: https://linuxhint.com/xz_compression_tutorial/
# Reference: https://blog.csdn.net/example440982/article/details/51712973
# Reference: https://wangying.sinaapp.com/archives/2574
zuz_uz(){
    local target_file=${1:-filename}
    local dest_folder="${2:-.}"

    target_file="$( cd "$(dirname "$target_file")" && pwd )"/$(basename "$target_file")
    mkdir -p "$dest_folder"
    cd "$dest_folder" || return 1

    case $target_file in
        *.tar)      
            zuz_run tar xvf "$target_file"
            ;;
        *.tar.gz)
            zuz_run tar xzvf "$target_file"
            ;;
        *.tar.Z)
            zuz_run tar xZvf "$target_file"
            ;;
        *.bz2)
            zuz_run tar xjvf "$target_file"
            ;;
        *.bz2.*)
            cat "${target_file%.*}".* | tar xjvf
            ;;
        *.tar.Z.*)
            cat "${target_file%.*}".* | tar xZvf
            ;;
        *.tar.gz.*)
            cat "${target_file%.*}".* | tar xzv
            ;;
        *.tar.*)      
            cat "${target_file%.*}".* | tar xvf
            ;;
        *.gz)
            zuz_run gunzip -k -d "$target_file"
            ;;
        *.xz)
            # TODO: Figure it out
            zuz_run xz -d "$target_file"
            ;;
        *.zip)
            zuz_run x 7z e "$@"
            # zuz_run x unzip "$target_file"
            # unzip xfv "$target_file" "$@"
            ;;
        rar)
            zuz_run x unrar "$target_file"
            ;;
        *.7z)
            zuz_run x 7zr xfv "$target_file"
            ;;
    esac && [ -z "$ZUZ_DELETE_AFTER" ] && rm "$target_file"
}

zuz_uzr(){
    ZUZ_DELETE_AFTER=1 zuz_uz "$@"
}


zuz_z(){
    param:dsl <<A
option:
    --size        ""  <size>=0       =~   [^.]+
    #1          "target file"
A
    param:run

    if [ $# = 0 ]; then
        zuz_z help
    fi

    local target_file=${1:-filename}; shift
    case "$target_file" in
        *.tar)    
            if [ "$size" != 0 ]; then
                # We should use 7zip
                zuz_run x 7z -v$size "$target_file" "$@"
            else
                zuz_run tar cvf "$target_file" "$@"
            fi
            ;;
        *.tar.gz)
            if [ "$size" != 0 ]; then
                zuz_run x 7z -v$size "$target_file" "$@"
            else
                zuz_run tar czf "$target_file" "$@"
            fi
            ;;
        *.tar.Z)
            if [ "$size" != 0 ]; then
                zuz_run x 7z -v$size "$target_file" "$@"
            else
                zuz_run tar cZf "$target_file" "$@"
            fi
            ;;
        *.bz2)
            if [ "$size" != 0 ]; then
                zuz_run x 7z -v$size "$target_file" "$@"
            else
                zuz_run tar cjf "$target_file" "$@"
            fi
            ;;
        *.gz)
            zuz_run gzip -c "$@" > "$target_file"
            ;;
        *.xz)
            # We can use 7zip to handle xz ? Little footprint.
            zuz_run xz -c -kz "$@" > "$target_file" 
            ;;
        *.zip)
            # Using zip facility
            # zuz_run zip -r "$target_file" "$@"
            # unzip xfv "$target_file" "$@"
            zuz_run x 7z a -tzip -r "$target_file" "$@"
            ;;
        rar)
            # x unrar 
            echo "Unsupported to compress as rar format." >&2
            return 1
            ;;
        *.7z)
            if [ "$size" != 0 ]; then             
                zuz_run x 7zr a -v$size "$target_file" "$@"
            else
                zuz_run x 7zr a "$target_file" "$@"
            fi
            ;;
    esac
}

if [ -z "$XRC_NO_ADVISE" ] && [ -n "${BASH_VERSION}${ZSH_VERSION}" ] && [ "${-#*i}" != "$-" ]; then
    xrc advise/v0
    advise zuz
fi
